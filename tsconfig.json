{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": false,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
